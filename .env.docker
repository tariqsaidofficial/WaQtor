# Docker Environment Configuration
# Copy this to .env and update values

# API Configuration
API_KEY=test-api-key-123
PORT=8080
HOST=0.0.0.0

# Environment
NODE_ENV=development

# WhatsApp Configuration
READONLY_FORK=false

# CORS - Allow dashboard access
CORS_ORIGIN=http://localhost:3000,http://dashboard:3000

# Dashboard Configuration (Browser URLs - for client-side)
NEXT_PUBLIC_BROWSER_API_URL=http://localhost:8080
NEXT_PUBLIC_BROWSER_WS_URL=ws://localhost:8080

# Dashboard Configuration (Docker URLs - for SSR)
NEXT_PUBLIC_API_URL=http://backend:8080
NEXT_PUBLIC_WS_URL=ws://backend:8080

# API Key (must match backend)
NEXT_PUBLIC_API_KEY=test-api-key-123

# Debug
DEBUG=true

# File watching for hot reload
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true

# Optional: Error Monitoring
# SENTRY_DSN=your-sentry-dsn
# ERROR_MONITORING_ENABLED=true

# Optional: Database (future)
# DATABASE_URL=sqlite://./data/waqtor.db
