{
  "name": "waqtor",
  "version": "1.0.0",
  "description": "WaQtor - Smart Automation Engine for WhatsApp. Built on whatsapp-web.js v1.34.1",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "node runtime/server/index.js",
    "dev": "NODE_ENV=development nodemon runtime/server/index.js",
    "test": "mocha tests --recursive --timeout 5000",
    "test-single": "mocha",
    "shell": "node --experimental-repl-await ./shell.js",
    "generate-docs": "npx jsdoc --configure .jsdoc.json --verbose",
    "docker:build": "docker build -f docker/Dockerfile -t waqtor:latest .",
    "docker:run": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:stop": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tariqsaidofficial/WaQtor.git"
  },
  "keywords": [
    "waqtor",
    "WaQtor",
    "whatsapp",
    "whatsapp-web",
    "whatsapp-api",
    "automation",
    "bot",
    "client",
    "node",
    "rest-api",
    "campaigns"
  ],
  "author": "Tariq Said (DXBMark) <info@dxbmark.com>",
  "contributors": [
    {
      "name": "Pedro S Lopez",
