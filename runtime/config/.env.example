# Waqtor Server Configuration

# Server
PORT=8080
NODE_ENV=development

# API Security
API_KEY=waqtor_default_key_change_me_in_production

# Testing & Development
# Your personal phone number for testing (format: country code + number, no spaces)
# Example: 966501234567 for Saudi Arabia
# This will NOT be committed to git (make sure to add .env to .gitignore)
TEST_PHONE_NUMBER=971505121583

# Logging
LOG_LEVEL=info

# Database
DB_PATH=./runtime/server/db/waqtor.db

# WhatsApp Session
SESSION_PATH=./runtime/server/session

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Puppeteer (for WhatsApp Web)
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

